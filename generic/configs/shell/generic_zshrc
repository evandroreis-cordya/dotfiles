# Generic shell configuration file
# This file contains configurations that are common across all platforms

# Load generic configurations
source ~/dotfiles/generic/configs/shell/generic_exports
source ~/dotfiles/generic/configs/shell/generic_functions
source ~/dotfiles/generic/configs/shell/generic_options
source ~/dotfiles/generic/configs/shell/generic_aliases

# Load platform-specific configurations
case "$(uname -s)" in
    Darwin*)
        source ~/dotfiles/macos/configs/shell/macos_specific
        ;;
    Linux*)
        source ~/dotfiles/linux/configs/shell/linux_specific
        ;;
    CYGWIN*|MINGW*|MSYS*)
        source ~/dotfiles/windows/configs/shell/windows_specific
        ;;
esac

# Load additional configurations if they exist
if [[ -d ~/dotfiles/generic/configs/shell/aliases ]]; then
    for file in ~/dotfiles/generic/configs/shell/aliases/*; do
        if [[ -f "$file" ]]; then
            source "$file"
        fi
    done
fi
